#!/bin/bash

set -e

git="git --git-dir=./build/.git --work-tree=./build"

function run() {
  cmd=$@
  echo $cmd
  eval "$cmd"
}

function setup() {
  run "mkdir -p build"
  run "$git init"
  run "$git remote add origin git@github.com:rubymonsters/ruby-for-beginners.git"
  run "$git fetch"
  run "$git reset --hard origin/gh-pages"
}

function commit() {
  local msg=$1
  run "git add -A ."
  run "git commit -am '$msg' || true"
  run "git push"
}

function compile() {
  run "bundle exec middleman build --verbose"
}

function push() {
  run "$git add -A ."
  run "$git commit -am 'build'"
  run "$git push -f origin HEAD:gh-pages"
}

if [ ! -d build/.git ]; then
  setup
fi

if [ -n "$1" ]; then
  commit "$1"
fi

compile
push
